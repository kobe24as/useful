<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fl"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

    </FrameLayout>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <RadioButton
            android:padding="2dp"
            android:gravity="center"
            android:text="首页"
            android:button="@null"
            android:id="@+id/rb_1"
            android:layout_width="1dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:padding="2dp"
            android:gravity="center"
            android:text="主页"
            android:button="@null"
            android:id="@+id/rb_2"
            android:layout_width="1dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <RadioButton

            android:padding="2dp"
            android:gravity="center"
            android:text="主页"
            android:button="@null"
            android:id="@+id/rb_3"
            android:layout_width="1dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:padding="2dp"
            android:gravity="center"
            android:text="主页"
            android:button="@null"
            android:id="@+id/rb_4"
            android:layout_width="1dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:padding="2dp"
            android:gravity="center"
            android:text="主页"
            android:button="@null"
            android:id="@+id/rb_5"
            android:layout_width="1dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

    </RadioGroup>


</LinearLayout>
